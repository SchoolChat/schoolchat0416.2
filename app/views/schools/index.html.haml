    %tbody
      -@schools.each do |school|
        %tr
          %td
            = school.id
          %td
            = school.comments.count
          %td
            = school.name
          %td
            = school.location
          %td
            = school.japan
          %td
            = school.educationalprogram
          %td
            - if school.kindergarten == nil
              = "no input"
            - else
              - if school.kindergarten == true
                = "幼"
          %td
            - if school.primary == nil
              = "no input"
            - else
              - if school.primary == true
                = "小"
          %td
            - if school.middle == nil
              = "no input"
            - else
              - if school.middle == true
                = "中"
          %td
            - if school.high == nil
              = "no input"
            - else
              - if school.high == true
                = "高"
          %td
            = link_to 'Show', school

          - if logged_in?
            %td
              = link_to 'Edit', edit_school_path(school)
            %td
              / # = link_to 'Destroy', school_delete_path(school), method: :delete, data: { confirm: 'Are you sure?' }
